<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViewPointReader.Views.VprRecommendedView">
    <ListView x:Name="FeedRecommendations"
              ItemsSource="{Binding FeedRecommendations}"
              ItemTapped="Handle_ItemTapped"
              HasUnevenRows="True" 
              VerticalOptions="FillAndExpand"
              CachingStrategy="RecycleElement">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding Title}" 
                               FontSize="Medium" TextColor="Red" />
                        <Label Text="{Binding Description}" 
                               FontSize="Small"/>
                        <Label Text="{Binding RecommendationScore}" 
                               FontSize="Small" TextColor="Green"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>